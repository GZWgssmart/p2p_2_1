                <!--/home/indexMsg = authc,perms["role:message"]-->
                <!--/dynamic/addDynamicPage = authc,perms["role:message"]-->
                <!--/dynamic/dynamicPage = authc,perms["role:message"]-->
                <!--/dynamic/editPage = authc,perms["role:message"]-->
                <!--/company/addMediaReportPage = authc,perms["role:message"]-->
                <!--/company/mediaReport = authc,perms["role:message"]-->
